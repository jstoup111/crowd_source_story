<% provide :title, 'Sign in'%>
<div class="row">
  <div class="span6 offset3">
      <h1>Sign in</h1>
      <%= simple_form_for :session, url: sessions_path, html: {class: 'form-horizontal' } do |f| %>
          <%= f.input :email, label: 'Username/Email', placeholder: 'Email/Password' %>
          <%= f.input :password %>
          <%= f.submit 'Sign in', class: 'controls btn btn-primary btn-large' %>
      <% end %>
      <%= link_to "Are you a new writer?", new_user_path %>
  </div>
</div>